*/
User Function xReadLog( cLog )
Local aTxt := {}

if Select( cLog ) > 0
	( cLog )->( dbGoTop() )
	while ( cLog )->( !eof() )
		if len( aTxt ) == 3500
			aAdd( aTxt, { '! Capacidade do arquivo de log excedida.', Space(8) } )
			exit
		endif
		aAdd( aTxt, { Rtrim(LOG_TXT), LOG_DAT, LOG_HOR } )
		( cLog )->( dbSkip() )
	end
endif

Return aTxt

