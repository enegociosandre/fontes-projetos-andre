*/
User Function xAddLog( cLog, cMsg, cToFile )

if Select( cLog ) > 0
	RecLock( cLog, .T.)
	( cLog )->( FieldPut( FieldPos("LOG_TXT"), Left( cMsg, 200 )) )
	if Len( Alltrim( cMsg ) ) > 0
		( cLog )->( FieldPut( FieldPos("LOG_HOR"), Time() ) )
		( cLog )->( FieldPut( FieldPos("LOG_DAT"), Date() ) )
	endif
	( cLog )->( msUnlock() )
endif

if cToFile <> nil
	xAddToFile( cLog, cToFile )
endif

Return

