±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
ßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßß
*/
User Function xSaveLog( cLog, cFile, nType )
Local lRet	:= .F.
Local nHdl	:= -1
Local cBuff	:= ""

nType	:= if( nType == Nil, 0, nType )

if Select( cLog ) > 0
	
	if File( cFile )
		if nType == 0
			FErase( cFile )
			nHdl := FCreate( cFile )
		else
			nHdl := FOpen( cFile, 1 )
			if nHdl >= 0
				FSeek( nHdl, 0, 2 )
			endif
		endif
	else
		nHdl := FCreate( cFile )
	endif
	
	if nHdl >= 0
		( cLog )->( dbGoTop() )
		while ( cLog )->( !eof() )
			cBuff := if( Empty(LOG_DAT), Space(8), dtoc(LOG_DAT))+"  "+LOG_HOR+"  "+Rtrim(LOG_TXT) + CRLF
			FWrite( nHdl, cBuff, Len(cBuff) )
			( cLog )->( dbSkip() )
		end
		lRet := .T.
	endif
endif

FClose( nHdl )

Return lRet

