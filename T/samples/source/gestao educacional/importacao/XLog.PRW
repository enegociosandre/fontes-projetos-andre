Static Function xAddToFile( cLog, cToFile )
local nHdl		:= -1
local cBuff

if File( cToFile )
	nHdl := FOpen( cToFile, 1 )
	if nHdl >= 0
		FSeek( nHdl, 0, 2 )
	endif
else
	nHdl := FCreate( cToFile )
endif

if nHdl >= 0
	cBuff := ( cLog )->( if(Empty(LOG_DAT), Space(8), dtoc(LOG_DAT))+"  "+LOG_HOR+"  "+Rtrim(LOG_TXT) + CRLF )
	FWrite( nHdl,  cBuff, Len( cBuff ) )
endif

FClose( nHdl )

Return