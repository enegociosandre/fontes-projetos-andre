User Function xCreateLog( cToFile )
Local aStru	:= {{"LOG_TXT", "C", 200, 0},;
				{"LOG_DAT", "D",   8, 0},;
				{"LOG_HOR", "C",   8, 0}}

Local cLogF	:= CriaTrab( aStru, .T. )

if Select( cLogF ) > 0
	dbSelectArea( cLogF )
	dbCloseArea()
endif

dbUseArea(.T., "DBFCDX", cLogF, cLogF, .T.)

U_XAddLog( cLogF, '@ Inicio do registro de log...', cToFile )

Return cLogF

